{
  "name": "servora-ui-components",
  "version": "1.0.1",
  "description": "A collection of reusable UI components built with React and Tailwind CSS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "style": "dist/tailwind.css",
  "scripts": {
    "build:css": "tailwindcss -i ./src/index.css -o ./dist/tailwind.css --minify",
    "build": "npm run build:css && tsup src/index.ts --format cjs,esm --dts --external react,react-dom,react/jsx-runtime",
    "clean": "rm -rf dist",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react,react-dom,react/jsx-runtime --watch",
    "lint": "eslint src/**/*.ts*",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.9.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "next": "^15.5.5",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.0.6",
    "@storybook/react-vite": "^10.0.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "storybook": "^10.0.6",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.0.0",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "tailwindcss"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/servora-systems/ui-components.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
